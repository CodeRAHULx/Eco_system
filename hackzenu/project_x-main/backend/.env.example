# ============================================================================
# SafeRoute AI - Backend Environment Configuration
# ============================================================================

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/saferoute
MONGODB_TEST_URI=mongodb://localhost:27017/saferoute_test

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=7d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# AI Service Configuration
AI_SERVICE_URL=http://localhost:8000

# Groq API (for AI analysis)
GROQ_API_KEY=your_groq_api_key_here

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# SMS Configuration (for emergency alerts)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# Authority APIs
POLICE_API_KEY=your_police_api_key
FIRE_API_KEY=your_fire_api_key
MEDICAL_API_KEY=your_medical_api_key
MUNICIPAL_API_KEY=your_municipal_api_key

# Logging
LOG_LEVEL=info
LOG_FILE=logs/saferoute.log

# Security
RATE_LIMIT=100
RATE_LIMIT_WINDOW=900000

# Features
ENABLE_NOTIFICATIONS=true
ENABLE_AUTHORITY_SYNC=true
ENABLE_AI_ANALYSIS=true

# Map Services
MAPBOX_API_KEY=your_mapbox_api_key
OPENSTREETMAP_API_KEY=your_osm_api_key

# Cache
CACHE_TTL=3600
CACHE_PREFIX=saferoute:

# Debug
DEBUG=false
VERBOSE_LOGGING=false
