# ============================================================================
# SafeRoute AI - AI Service Environment Configuration
# ============================================================================

# Server Configuration
HOST=0.0.0.0
PORT=8000
ENV=development

# Groq AI Configuration
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=mixtral-8x7b-32768

# Local Model Configuration
USE_LOCAL_MODELS=false
MODEL_PATH=./models/
NLP_MODEL=distilbert-base-uncased
CV_MODEL=yolov8n.pt
RISK_MODEL=./models/risk_model.pkl

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/saferoute
MONGODB_TIMEOUT=30

# Cache Configuration
CACHE_TYPE=redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1
CACHE_TTL=3600

# Logging
LOG_LEVEL=info
LOG_FILE=logs/ai_service.log

# API Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000
API_VERSION=v1
REQUEST_TIMEOUT=30

# Feature Flags
ENABLE_NLP=true
ENABLE_CV=true
ENABLE_RISK_PREDICTION=true
ENABLE_EMERGENCY_DETECTION=true

# Performance
MAX_WORKERS=4
BATCH_SIZE=32
MODEL_PRECISION=float32

# Debug
DEBUG=false
VERBOSE_LOGGING=false
PROFILE_REQUESTS=false
